
@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-8 col-lg-7" style="height:500px">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="text-primary font-weight-bold">Earnings Overview</h5>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-lg-5" style="height:500px">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="text-primary font-weight-bold">Revenue Sources</h5>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4 pb-2">
                        <canvas id="myPieChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="mr-2">
                            <i class="fa fa-circle text-primary"></i> Direct
                        </span>
                        <span class="mr-2">
                            <i class="fa fa-circle text-success"></i> Social
                        </span>
                        <span class="mr-2">
                            <i class="fa fa-circle text-info"></i> Referral
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
