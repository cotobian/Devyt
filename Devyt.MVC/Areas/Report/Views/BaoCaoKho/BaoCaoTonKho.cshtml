
@{
    ViewBag.Title = "Báo cáo Tồn kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Báo cáo Tồn kho</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Số tờ khai</th>
                        <th>Tên hàng</th>
                        <th>Số kiện</th>
                        <th>Tên kho</th>
                        <th>Vị trí</th>
                        <th>Ngày nhập</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "/BaoCaoKho/TonKho",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "SoToKhai" },
                    { "data": "TenHang" },
                    { "data": "SoKien" },
                    { "data": "TenKho" },
                    { "data": "ViTri" },
                    { "data": "NgayNhapText" }
                ]
            });
        });

        
    </script>
}
