
@{
    ViewBag.Title = "Danh sách Kế hoạch vận tải";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3>Danh sách Kế hoạch vận tải</h3>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <table id="truckTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Bill/Booking</th>
                        <th>Khách hàng</th>
                        <th>Điểm đi</th>
                        <th>Điểm đến</th>
                        <th>Ngày tạo</th>
                        <th>Ngày hết hạn</th>
                        <th>Loại hàng</th>
                        <th>Mặt hàng</th>
                        <th>Đơn vị vận tải</th>
                        <th>Người liên lạc</th>
                        <th>Ghi chú</th>
                        <th>Sửa</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section scripts{
    <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $("#truckTable").DataTable({
                "ajax": {
                    "url": "/KeHoachVanTai/GetAllKeHoachVanTai",
                    "type": "GET",
                    "datatype": "json",
                },
                "columns": [
                    { "data": "BillBook" },
                    { "data": "TenKh" },
                    { "data": "DiemDiText" },
                    { "data": "DiemDenText" },
                    { "data": "NgayTaoText" },
                    { "data": "NgayHoanTatText" },
                    { "data": "TenLoaiHang" },
                    { "data": "MatHang" },
                    { "data": "TenDvvt" },
                    { "data": "NguoiLienLac" },
                    { "data": "GhiChu" },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-pencil f-18 text-success' onclick=PopupForm('@Url.Action("AddOrEdit", "DonViTinh")/" + data + "')><i/>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    },
                    {
                        "data": "Id", "render": function (data) {
                            return "<i class='fa fa-trash f-20 text-danger' onclick=Delete(" + data + ")></i>";
                        },
                        "orderable": false,
                        "searchable": false,
                        "width": "10px",
                        "className": 'text-center'
                    }
                ]
            });
        });
    </script>
}




