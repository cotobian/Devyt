@model Devyt.Models.Admin_PhongBan
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "PhongBan", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên Phòng ban</label>
        @Html.EditorFor(model => model.TenPhongBan, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenPhongBan)
    </div>
    <div class="form-group">
        <label class="control-label">Chi nhánh</label>
        @Html.DropDownListFor(model => model.ChiNhanhId, new SelectList(ViewBag.ChiNhanhList, "Id", "ChiNhanh"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}