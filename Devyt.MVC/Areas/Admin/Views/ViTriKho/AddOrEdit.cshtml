@model Devyt.Models.Admin_ViTriKho
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "ViTriKho", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Vị trí</label>
        @Html.EditorFor(model => model.ViTri, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ViTri)
    </div>
    <div class="form-group">
        <label class="control-label">Kho</label>
        @Html.DropDownListFor(model => model.KhoId, new SelectList(ViewBag.KhoList, "Id", "TenKho"), "-- Chọn Kho --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}