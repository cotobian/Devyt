    </div>
    <div class="form-group">
        <label class="control-label">Địa chỉ</label>
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DiaChi)
    </div>
    <div class="form-group">
        <label class="control-label">Email</label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group">
        <label class="control-label">Hotline</label>
        @Html.EditorFor(model => model.Hotline, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Hotline)
    </div>
    <div class="form-group">
        <label class="control-label">Tel</label>
        @Html.EditorFor(model => model.Tel, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Tel)
    </div>
    <div class="form-group">
        <label class="control-label">Fax</label>
        @Html.EditorFor(model => model.Fax, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Fax)
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}
