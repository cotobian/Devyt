@model Devyt.Models.Admin_PhanQuyen
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "PhanQuyen", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Phân quyền</label>
        @Html.EditorFor(model => model.TenPhanQuyen, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenPhanQuyen)
    </div>
    <div class="form-group">
        <label class="control-label">Tên đầy đủ</label>
        @Html.EditorFor(model => model.TenDayDu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenDayDu)
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}