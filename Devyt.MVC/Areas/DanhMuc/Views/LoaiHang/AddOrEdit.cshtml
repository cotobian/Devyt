@model Devyt.Models.DanhMuc_LoaiHang
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "LoaiHang", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Loại hàng</label>
        @Html.EditorFor(model => model.TenLoaiHang, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}