@model Devyt.Models.DanhMuc_Romooc
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "RoMooc", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Số Rơ mooc</label>
        @Html.EditorFor(model => model.SoRomooc, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Hạn đăng kiểm</label>
        @Html.EditorFor(model => model.HanDangKiem, new { htmlAttributes = new { @class = "form-control datefield" } })    
    </div>
    <div class="form-group">
        <label class="control-label">Trọng tải</label>
        @Html.EditorFor(model => model.TrongTai, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @class = "form-control datepick" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}
<script>
    $(document).ready(function () {
        $(".datefield").datepicker({
            dateFormat: 'dd/mm/yy'
        });
    });
</script>