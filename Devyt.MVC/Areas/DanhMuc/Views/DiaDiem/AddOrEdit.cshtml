@model Devyt.Models.DanhMuc_DiaDiem
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "DiaDiem", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Địa điểm</label>
        @Html.EditorFor(model => model.TenDiaDiem, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Kinh độ</label>
        @Html.EditorFor(model => model.KinhDo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Vĩ độ</label>
        @Html.EditorFor(model => model.ViDo, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}