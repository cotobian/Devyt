@model Devyt.Models.DanhMuc_KhachHang
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "KhachHang", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên khách hàng</label>
        @Html.EditorFor(model => model.TenKhachHang, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Địa chỉ</label>
        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Mã số thuế</label>
        @Html.EditorFor(model => model.MaSoThue, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tên viết tắt</label>
        @Html.EditorFor(model => model.TenVietTat, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Email</label>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Người liên lạc</label>
        @Html.EditorFor(model => model.NguoiLienLac, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}