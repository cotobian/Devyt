@model Devyt.Models.DanhMuc_DonViTinh
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "DonViTinh", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Đơn vị tính</label>
        @Html.EditorFor(model => model.TenDonViTinh, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenDonViTinh)
    </div>
    <div class="form-group">
        <label class="control-label">Ghi chú</label>
        @Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.GhiChu)
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}