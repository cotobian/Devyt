@model Devyt.Models.DanhMuc_BieuCuocChuan
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "BieuCuocChuan", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label class="control-label">Tên biểu cước</label>
        @Html.EditorFor(model => model.TenBieuCuoc, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Mã biểu cước</label>
        @Html.EditorFor(model => model.MaBieuCuoc, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Đơn vị tính</label>
        @Html.DropDownListFor(model => model.DonViTinhId, new SelectList(ViewBag.DonViTinhList, "Id", "TenDonViTinh"), " -- Chọn Đơn vị tính --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label class="control-label">Đơn giá</label>
        @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @type = "number", @min = "0", @step = "0.01", @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
    </div>
}