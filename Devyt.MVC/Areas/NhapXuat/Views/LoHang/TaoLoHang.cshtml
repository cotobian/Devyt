@model Devyt.Models.NhapXuat_LoHang
@{
    ViewBag.Title = "Tạo mới lô hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông tin lô hàng</h2>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-body">
            @using (Html.BeginForm("TaoLoHang", "LoHang", FormMethod.Post@*, new { onsubmit = "return SubmitForm(this)" }*@))
            {
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <label class="control-label">Số tờ khai</label>
                    @Html.EditorFor(model => model.SoToKhai, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label class="control-label">Ngày tờ khai</label>
                    @Html.EditorFor(model => model.NgayToKhai, new { htmlAttributes = new { @class = "form-control datefield" } })
                </div>
                <div class="form-group">
                    <label class="control-label">Số hợp đồng</label>
                    @Html.EditorFor(model => model.SoHopDong, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label class="control-label">Ngày hợp đồng</label>
                    @Html.EditorFor(model => model.NgayHopDong, new { htmlAttributes = new { @class = "form-control datefield" } })
                </div>
                <div class="form-group">
                    <label class="control-label">Chủ hàng</label>
                    @Html.EditorFor(model => model.ChuHang, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label class="control-label">Kho nhập</label>
                    @Html.DropDownListFor(model => model.KhoId, new SelectList(ViewBag.KhoList, "Id", "TenKho"), "-- Chọn kho --", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Nhà Xuất nhập khẩu</label>
                    @Html.DropDownListFor(model => model.NhaXNKId, new SelectList(ViewBag.NhaXNKList, "Id", "TenNhaXNK"), "-- Chọn nhà XNK --", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Tạo mới" class="btn btn-success" />
                </div>
            }
            
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".datefield").datepicker({
            dateFormat: 'dd/mm/yy'
        });
    });
</script>